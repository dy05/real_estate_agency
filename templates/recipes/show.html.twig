{% extends 'base.html.twig' %}

{% block title %}Recette : {{ recipe.label }}{% endblock %}

{% block body %}
<div>
    <h1>
        {{ recipe.label }}
    </h1>

    <p>
        {{ recipe.description | nl2br }}
    </p>

    <p>
        <a href="{{ url('recipes.edit', {id: recipe.id}) }}"
           class="btn btn-primary">
            Editer
        </a>
    </p>
</div>
{% endblock %}
